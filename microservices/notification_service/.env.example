# Environment variables for Notification Service
# UK Management Bot - Microservices

# Service Configuration
SERVICE_SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
SERVICE_DEBUG=true
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8003

# Database Configuration
SERVICE_DATABASE_URL=postgresql+asyncpg://uk_notifications_user:notifications_password@postgres_notifications:5432/uk_notifications_db

# Redis Configuration
SERVICE_REDIS_URL=redis://redis:6379/0
SERVICE_REDIS_DB=0

# JWT Authentication
SERVICE_JWT_SECRET_KEY=your-secret-key-here-change-in-production
SERVICE_JWT_ALGORITHM=HS256
SERVICE_JWT_EXPIRE_MINUTES=30

# CORS & Security
SERVICE_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
SERVICE_ALLOWED_HOSTS=["localhost","127.0.0.1","notification-service"]

# OpenTelemetry
SERVICE_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
SERVICE_OTLP_ENDPOINT=http://otel-collector:4317

# Logging
SERVICE_LOG_LEVEL=INFO
SERVICE_LOG_FORMAT=json

# Health Checks
SERVICE_HEALTH_CHECK_INTERVAL=30

# Rate Limiting
SERVICE_RATE_LIMIT_REQUESTS=100
SERVICE_RATE_LIMIT_WINDOW=60

# Telegram Bot Configuration
SERVICE_BOT_TOKEN=your_telegram_bot_token_here
SERVICE_TELEGRAM_CHANNEL_ID=your_channel_id_here

# Notification Settings
SERVICE_MAX_RETRY_ATTEMPTS=3
SERVICE_RETRY_DELAY_SECONDS=5
SERVICE_BATCH_SIZE=100

# Multi-channel Support
SERVICE_EMAIL_ENABLED=false
SERVICE_SMS_ENABLED=false
SERVICE_TELEGRAM_ENABLED=true