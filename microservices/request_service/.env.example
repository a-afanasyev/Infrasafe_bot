# Request Service Environment Configuration
# UK Management Bot - Request Management System

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
HOST=0.0.0.0
PORT=8003
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://request_user:request_pass@localhost:5435/request_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6382/3

# Service Authentication
JWT_SECRET_KEY=request-service-secret-key-change-in-production
SERVICE_API_KEY=request-service-api-key-change-in-production

# External Services URLs
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
MEDIA_SERVICE_URL=http://localhost:8004
NOTIFICATION_SERVICE_URL=http://localhost:8005

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9003