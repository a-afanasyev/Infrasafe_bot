# Request Service Migration Configuration
# UK Management Bot - Request Management System

# Application Settings
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8003

# Database Configuration (Request Service)
DATABASE_URL=postgresql+asyncpg://request_user:request_pass@localhost:5432/request_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/3

# Authentication
JWT_SECRET_KEY=request-service-secret-key-change-in-production
SERVICE_API_KEY=request-service-api-key-change-in-production
INTERNAL_API_TOKEN=internal-service-token-change-in-production

# External Services
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
MEDIA_SERVICE_URL=http://localhost:8004
NOTIFICATION_SERVICE_URL=http://localhost:8005
AI_SERVICE_URL=http://localhost:8006

# Migration Settings
MIGRATION_MODE=dual
MONOLITH_API_URL=http://localhost:8000
BOT_SERVICE_URL=http://localhost:8001
ENABLE_DB_FALLBACK=true
DB_FALLBACK_BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9003

# Request Number Generation
REQUEST_NUMBER_REDIS_TTL=86400
REQUEST_NUMBER_COUNTER_MAX=999

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Cache TTL (seconds)
CACHE_REQUEST_TTL=300
CACHE_USER_TTL=600
CACHE_STATS_TTL=1800

# Business Rules
MAX_ASSIGNMENTS_PER_REQUEST=5
REQUEST_AUTO_CANCEL_DAYS=30
RATING_MIN_VALUE=1
RATING_MAX_VALUE=5

# File Upload
MAX_FILE_SIZE_MB=10

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100