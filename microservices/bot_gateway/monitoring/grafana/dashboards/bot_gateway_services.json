{
  "dashboard": {
    "title": "Bot Gateway - Service Integration",
    "tags": ["bot-gateway", "services", "integration"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Service Request Rate",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_requests_total[5m])",
            "legendFormat": "{{service_name}} - {{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Service Request Duration (95th percentile)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(bot_gateway_service_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{service_name}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "graph",
        "title": "Auth Service Requests",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_requests_total{service_name=\"auth\"}[5m])",
            "legendFormat": "{{status}} - {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "graph",
        "title": "Request Service Requests",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_requests_total{service_name=\"request\"}[5m])",
            "legendFormat": "{{status}} - {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "graph",
        "title": "User Service Requests",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_requests_total{service_name=\"user\"}[5m])",
            "legendFormat": "{{status}} - {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Service Error Rate by Service",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_errors_total[5m])",
            "legendFormat": "{{service_name}} - {{error_code}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "table",
        "title": "Service Error Breakdown",
        "targets": [
          {
            "expr": "sum by (service_name, error_code) (increase(bot_gateway_service_errors_total[1h]))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "service_name": "Service",
                "error_code": "Error Code",
                "Value": "Count (1h)"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "graph",
        "title": "Circuit Breaker States",
        "targets": [
          {
            "expr": "bot_gateway_service_circuit_breaker_state",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "state",
            "min": 0,
            "max": 2
          },
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "graph",
        "title": "Shift Service Requests",
        "targets": [
          {
            "expr": "rate(bot_gateway_service_requests_total{service_name=\"shift\"}[5m])",
            "legendFormat": "{{status}} - {{endpoint}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
