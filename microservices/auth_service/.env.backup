# Auth Service Environment Configuration
# UK Management Bot - Auth Service

# Service Configuration
SERVICE_NAME=auth-service
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8001

# Database Configuration
DATABASE_URL=postgresql+asyncpg://auth_user:auth_pass@auth-db:5432/auth_db

# Redis Configuration
REDIS_URL=redis://shared-redis:6379/1
REDIS_DB=1

# JWT Configuration
JWT_SECRET_KEY=auth-service-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# Session Management
SESSION_EXPIRE_HOURS=24
MAX_SESSIONS_PER_USER=5
CLEANUP_EXPIRED_SESSIONS_HOURS=6

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
# ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Checks
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Service Communication
USER_SERVICE_URL=http://user-service:8002
SERVICE_TOKENS_EXPIRE_DAYS=30

# Allowed Services for JWT (using defaults from config.py)

# User Roles Configuration (using defaults from config.py)

# System Permissions (using defaults from config.py)

# OpenTelemetry
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTLP_ENDPOINT=http://otel-collector:4317