# UK Management Bot - Microservices Environment Variables
# Sprint 0: Infrastructure Foundation
# Copy this file to .env and update with your values

# ==========================================
# DATABASE PASSWORDS
# ==========================================
AUTH_DB_PASSWORD=auth_secret_pass_change_me
USERS_DB_PASSWORD=users_secret_pass_change_me
REQUESTS_DB_PASSWORD=requests_secret_pass_change_me
ASSIGNMENTS_DB_PASSWORD=assignments_secret_pass_change_me
SHIFTS_DB_PASSWORD=shifts_secret_pass_change_me
NOTIFICATIONS_DB_PASSWORD=notifications_secret_pass_change_me
ANALYTICS_DB_PASSWORD=analytics_secret_pass_change_me
INTEGRATION_DB_PASSWORD=integration_secret_pass_change_me

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_PASSWORD=redis_secret_pass_change_me
REDIS_MAX_MEMORY=2gb
REDIS_MAX_CONNECTIONS=10000

# ==========================================
# VAULT CONFIGURATION
# ==========================================
VAULT_ROOT_TOKEN=myroot_change_me
VAULT_UNSEAL_KEY=unseal_key_change_me

# ==========================================
# MONITORING
# ==========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_me
PROMETHEUS_RETENTION=30d

# ==========================================
# LOGGING
# ==========================================
ELASTICSEARCH_PASSWORD=elastic_change_me
KIBANA_PASSWORD=kibana_change_me

# ==========================================
# TRAEFIK
# ==========================================
ACME_EMAIL=admin@uk-management.local
TRAEFIK_LOG_LEVEL=INFO

# ==========================================
# SERVICE CONFIGURATION
# ==========================================
# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_change_me_to_long_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Service Ports (internal)
AUTH_SERVICE_PORT=8000
USERS_SERVICE_PORT=8001
REQUESTS_SERVICE_PORT=8002
ASSIGNMENTS_SERVICE_PORT=8003
SHIFTS_SERVICE_PORT=8004
NOTIFICATIONS_SERVICE_PORT=8005
MEDIA_SERVICE_PORT=8006
INTEGRATION_SERVICE_PORT=8007
ANALYTICS_SERVICE_PORT=8008
GATEWAY_SERVICE_PORT=8080

# ==========================================
# TELEGRAM BOT
# ==========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# ==========================================
# ENVIRONMENT
# ==========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==========================================
# SECURITY
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
SECURE_COOKIES=false  # Set to true in production

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# ==========================================
# FILE STORAGE
# ==========================================
MEDIA_STORAGE_PATH=/app/media
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ==========================================
# TELEMETRY
# ==========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=uk-management-bot
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp