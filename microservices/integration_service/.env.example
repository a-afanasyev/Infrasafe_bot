# Integration Service - Environment Variables Example
# Copy this file to .env and fill in your values

# Application
APP_NAME="Integration Service"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8009
API_V1_PREFIX=/api/v1
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Multi-tenancy
MANAGEMENT_COMPANY_ID=uk_company_1

# Database
DATABASE_URL=postgresql+asyncpg://integration_user:integration_pass@postgres:5432/integration_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/3
REDIS_CACHE_TTL=300
REDIS_MAX_CONNECTIONS=50

# Message Bus (RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=integration_events
RABBITMQ_QUEUE=integration_queue

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_PATH=/secrets/google_sheets.json
GOOGLE_SHEETS_RATE_LIMIT_PER_MINUTE=100
GOOGLE_SHEETS_CACHE_TTL=300

# Google Maps Integration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_RATE_LIMIT_PER_MINUTE=50
GOOGLE_MAPS_CACHE_TTL=3600

# Yandex Maps Integration
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here
YANDEX_MAPS_RATE_LIMIT_PER_MINUTE=50
YANDEX_MAPS_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_DEFAULT_PER_MINUTE=60
RATE_LIMIT_DEFAULT_PER_HOUR=1000
RATE_LIMIT_DEFAULT_PER_DAY=10000

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE_MB=500

# Request Settings
REQUEST_TIMEOUT_SECONDS=30
REQUEST_MAX_RETRIES=3
REQUEST_RETRY_DELAY_SECONDS=1

# Webhook Settings
WEBHOOK_MAX_PAYLOAD_SIZE_MB=10
WEBHOOK_SIGNATURE_ALGORITHM=sha256
WEBHOOK_REQUIRE_HTTPS=true

# Health Check
HEALTH_CHECK_INTERVAL_SECONDS=60

# Monitoring
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Security
SECRET_KEY=change-this-secret-key-in-production-use-32-characters-minimum
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Sentry (Error Tracking)
SENTRY_DSN=

# Cost Tracking
COST_TRACKING_ENABLED=true
GOOGLE_MAPS_COST_PER_REQUEST=0.005
GOOGLE_SHEETS_COST_PER_REQUEST=0.0
YANDEX_MAPS_COST_PER_REQUEST=0.0
